{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "repositories": ["sjerocom/pv-monitor-card"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "bump"
    }
  ],
  "timezone": "Europe/Vienna",
  "labels": ["dependencies"],
  "assignees": ["sjerocom"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "dependencyDashboard": true,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0
}